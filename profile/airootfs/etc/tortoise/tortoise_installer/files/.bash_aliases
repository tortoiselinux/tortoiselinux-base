alias neofetch='fastfetch \
--logo-color-1 green \
--color green \
--logo "$HOME"/.config/tortoise/t_fetch/tortoisefetch.txt'

alias fastfetch='fastfetch \
--logo-color-1 green \
--color green \
--logo "$HOME"/.config/tortoise/t_fetch/tortoisefetch.txt'

# system commands alias
alias ls="ls --color=auto"
#alias cat="bat"

# system info
