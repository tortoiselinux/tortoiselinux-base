alias neofetch='fastfetch \
--logo-color-1 green \
--color green \
--logo "$HOME"/.config/tortoise/t_fetch/tortoisefetch.txt'

alias fastfetch='fastfetch \
--logo-color-1 green \
--color green \
--logo "$HOME"/.config/tortoise/t_fetch/tortoisefetch.txt'

# system commands alias
alias ls="eza --color=auto --icons=always"

# system info
alias install_info='ls -lct /etc | tail -1 | awk "{print \$6, \$7, \$8}"'

# source aliases
alias restart="exec zsh" # restart everything instead every individual config file modified
alias activate="source ./venv/bin/activate"
alias venv="virtualenv"

# config alias
alias i3conf="micro $HOME/.config/i3/config"
alias aconf="micro $HOME/.config/alacritty/alacritty.toml"
alias zconf="micro $HOME/.zshrc"
alias rconf="micro $HOME/.config/rofi/config.rasi"
alias pconf="micro /etc/xdg/picom.conf"
alias edit_alias="$EDITOR ~/.tortoise_aliases"

# yay aliases
# deprecate alias install="yay -S" because install is already a valid command

alias get="yay -S "
alias update="yay -Sy"
alias upgrade="yay -Syu"
alias remove="yay -R"

# git aliases
alias clone="git clone"
alias init="git init"
alias status="git status"
alias addAll="git add ."
alias add="git add"
alias commit="git commit"
alias push="git push origin main"
alias pull="git pull"
alias unstage="git restore --staged"
alias ignore="echo"

# programming languages
alias rb="ruby"
alias py="python"

alias mirror_update="sudo reflector -f 5 -p https -l 5 --save /etc/pacman.d/mirrorlist"

# text editors

alias m="emacs -nw"
alias vim="nvim"
